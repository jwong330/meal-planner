<head>
    <title>Meal Planner - Meal Plan</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <!-- Optional theme -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
</head>

<body>
    <h1>Meal Plan</h1>

    <!-- Main menu for the user to navigate to other pages -->
    <a href="/home">Home</a> | <a href="/workouts">Recipes</a> | <a href="/plans">Grocery List</a> | <b>Meal Plan</b>
    <a href="/"><button type="submit">Logout</button></a>

    <!-- Create a new log entry -->
    <form id="addLogForm">
        <h4>Add Meal to Plan</h4>
        <label for="numReps"><b>Serving Size</b></label>
        <input type="number" placeholder="(ex. 1, 2, 3)" name="numReps" id="numReps" required><br>

        <label for="numSets"><b>Quantity</b></label>
        <input type="number" placeholder="(ex. 1, 3, 5)" name="numSets" id="numSets" required><br>

        <label for="numWeight"><b>Weight</b></label>
        <input type="number" placeholder="Weight in grams (ex. 25, 75, 225)" name="numWeight" id="numWeight" required><br>

        <label for="dateEntry"><b>Date</b></label>
        <input type="date" name="dateEntry" id="dateEntry" required><br>

        <label for="userIDFilter"><b>Username</b></label>
        <select name="userIDFilter" id="userIDFilter" required>
            {{#if resultsUsers}}
            {{#each resultsUsers}}
            <option value="{{this.id}}">{{this.username}}</option>
            {{/each}}
            {{/if}}
        </select><br>

        <label for="workoutIDFilter"><b>Recipe</b></label>
        <select name="workoutIDFilter" id="workoutIDFilter" required>
            {{#if resultsWorkouts}}
            {{#each resultsWorkouts}}
            <option value="{{this.id}}">{{this.name}}</option>
            {{/each}}
            {{/if}}
        </select><br>

        <input type="submit" name="add log" value="Add Entry" id="addLogSubmit">
    </form><br>

    <!-- Update a log entry -->
    <form id="updateLogForm" action="/update-log">
        <h4>Update a Meal Plan</h4>

        <label for="logEntryFilter"><b>Log ID</b></label>
        <select name="id" id="logEntryFilter">
            {{#if results}}
            {{#each results}}
            <option value="{{this.id}}">{{this.id}}</option>
            {{/each}}
            {{/if}}
        </select><br>

        <label for="numReps"><b>Serving Size</b></label>
        <input type="number" placeholder="(ex. 1, 2, 3)" name="numReps" id="numReps"><br>

        <label for="numSets"><b>Quantity</b></label>
        <input type="number" placeholder="(ex. 1, 3, 5)" name="numSets" id="numSets"><br>

        <label for="numWeight"><b>Weight</b></label>
        <input type="number" placeholder="Weight in grams (ex. 25, 75, 225)" name="numWeight" id="numWeight"><br>

        <label for="dateEntry"><b>Date</b></label>
        <input type="date" name="dateEntry" id="dateEntry"><br>

        <input type="submit" name="add log" value="Update Entry" id="addLogSubmit">
    </form><br><br>

    <!-- Fill table of plans -->
    <table id="logTable">
        <tr>
            <th>Log ID</th>
            <th>Serving Size</th>
            <th>Quantity</th>
            <th>Weight</th>
            <th>Date</th>
            <th>User ID</th>
            <th>Recipe ID</th>
        </tr>
        {{#if results}}
        {{#each results}}
        <tr>
            <td>{{this.id}}</td>
            <td>{{this.reps}}</td>
            <td>{{this.sets}}</td>
            <td>{{this.weight}}</td>
            <td>{{this.date}}</td>
            <td>{{this.user_id}}</td>
            <td>{{this.workout_id}}</td>
            <td><input type="button" name="deleteLogButton" id="deleteButton+{{this.id}}" value="Delete" onClick="deleteRow('logTable', {{this.id}})"></td>
            <td><label hidden>row{{this.id}}</label></td>

        </tr>

        {{/each}}
        {{/if}}
    </table>

</body>

<script src="log.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>